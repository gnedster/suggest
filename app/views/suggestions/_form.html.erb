<%= form_for(@suggestion) do |f| %>
  <% if @suggestion.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@suggestion.errors.count, "error") %> prohibited this suggestion from being saved:</h2>

      <ul>
      <% @suggestion.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if create == "true" %>
    <div class="form-group">
      <%= f.label :name, "Title" %> (Required)<br>
      <%= f.text_field :name, :class=>"form-control", :required => true %>
    </div>
  <%end%>
  <div class="form-group">
    <%= f.label :tag_list, "Tags" %> (ex. social, engineering, benefits)<br>
    <%= f.autocomplete_field :tag_list, autocomplete_tag_name_suggestions_path, :"data-delimiter" => ', ', :class=> "form-control" %>
  </div>
  <% if create == "true" %>
    <div class="form-group">
      <%= f.label :description %><br>
      <%= f.text_area :description, :class=>"form-control" %>
    </div>
  <%end%>

  <button type="submit" class="btn btn-default">
    <% if create == "true"%>
      Create
    <% else %>
      Edit
    <% end %>
    Suggestion
  </button>
<% end %>